<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/dolphins_im"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dolphins"
            android:scaleType="fitEnd"/>

        <TextView
            android:id="@+id/dolphins_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Dolphins call each other by their name:" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dolphins_txt"
        android:onClick="onRadioButtonClicked"
        android:textSize="18sp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/dolphins_true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="True" />

        <RadioButton
            android:id="@+id/dolphins_false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="False" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/back_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/radioGroup"
        android:layout_alignParentLeft="true"
        android:background="@drawable/back"
        android:onClick="backq1"/>

    <ImageButton
        android:id="@+id/next_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/radioGroup"
        android:layout_alignParentRight="true"
        android:background="@drawable/next"
        android:onClick="nextq1"/>

</RelativeLayout>

