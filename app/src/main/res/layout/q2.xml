<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/koala_im"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/koala"
        android:scaleType="fitEnd"/>

    <TextView
        android:id="@+id/koala_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Koalas - select the true statements:" />

    <CheckBox
        android:id="@+id/koala_chb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/koala_chb3"
        android:layout_alignBottom="@+id/koala_chb3"
        android:layout_alignLeft="@+id/koala_chb4"
        android:layout_alignStart="@+id/koala_chb4"
        android:fontFamily="sans-serif"
        android:text="Koalas are bears    "
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/koala_chb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Koalas are great swimmers"
        android:fontFamily="sans-serif"
        android:textSize="10sp"
        android:layout_below="@id/koala_chb1"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/koala_chb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/koala_txt"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif"
        android:text="Baby koalas eat their mum poo"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/koala_chb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/koala_chb3"
        android:layout_toLeftOf="@+id/next_q1"
        android:layout_toStartOf="@+id/next_q1"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif"
        android:text="Koalas eat bamboo"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"/>

    <ImageButton
        android:id="@+id/back_q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/koala_chb2"
        android:background="@drawable/back"
        android:onClick="backq2"/>

    <ImageButton
        android:id="@+id/next_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/koala_chb4"
        android:background="@drawable/next"
        android:onClick="nextq2"/>

</RelativeLayout>

