<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/giraffe_im"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/giraffe"
        android:scaleType="fitEnd"/>

    <TextView
        android:id="@+id/giraffe_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Giraffe have more bones in their necks than humans:" />

    <RadioGroup
        android:id="@+id/radioGroupQ4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/giraffe_txt"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/giraffe_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True" />

        <RadioButton
            android:id="@+id/giraffe_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/next_q4"
            android:layout_toStartOf="@+id/next_q4"
            android:fontFamily="sans-serif"
            android:text="False"/>
    </RadioGroup>
    <ImageButton
        android:id="@+id/back_q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/radioGroupQ4"
        android:layout_alignParentLeft="true"
        android:background="@drawable/back"
        android:onClick="backq4"/>

    <ImageButton
        android:id="@+id/next_q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/radioGroupQ4"
        android:layout_alignParentRight="true"
        android:background="@drawable/next"
        android:onClick="nextq4"/>

</RelativeLayout>

